module SignExtend #(
	parameter			WIDTH = 64,
	parameter			IMM 	= 12

)(
	input			[31:0]		if_inst_i,
	output reg	[WIDTH-1:0]	se_inmed_o
);

	always @(*)
	begin
		case (if_inst_i[6:0]) //se evalua el opcode
			7'b0010011:			 //Inmediatos
							se_inmed_o	=	{{WIDTH-IMM{if_inst_i[31]}},if_inst_i[31:20]};
			7'b0100011:			 //Stores
							se_inmed_o	=	{{WIDTH-IMM{if_inst_i[31]}},{if_inst_i[31:25],if_inst_i[11:7]}};
			7'b0000011:			 //Loads
							se_inmed_o	=	{{WIDTH-IMM{if_inst_i[31]}},if_inst_i[31:20]};
			default: 
							se_inmed_o	=	{WIDTH{1'b0}};
		endcase	
	end
endmodule 
