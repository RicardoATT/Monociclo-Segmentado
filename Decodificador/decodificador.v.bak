module decodificador (
	input				[2:0]	a,
	output reg		[7:0] y
);

	always @(*)
	begin
		case (a)
			3'b000:
						y = 8'b00000001;
			3'b001:
						y = 8'b00000010;
			3'b010:
						y = 8'b00000100;
			3'b011:
						y = 8'b00001000;
			3'100:
						y = 8'b00010000;
			3'101:
						y = 8'b00100000;
			3'110:
						y = 8'b01000000;
			3'111:
						y = 8'b10000000;
		endcase
	end
endmodule 